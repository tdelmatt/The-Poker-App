<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tdelmatt.myapplication.mycasinos">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Casinos"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Add Casino: Input Casino Name Below"
        android:id="@+id/textView14"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/editTextaddcasino"
        android:layout_below="@+id/textView14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/addcasino"
        android:layout_toStartOf="@+id/addcasino" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Add"
        android:id="@+id/addcasino"
        android:layout_alignTop="@+id/editTextaddcasino"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/casview1"
        android:layout_below="@+id/editTextremovecasino"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/casview2"
        android:layout_below="@+id/casview1"
        android:layout_alignLeft="@+id/casview1"
        android:layout_alignStart="@+id/casview1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/casview3"
        android:layout_below="@+id/casview2"
        android:layout_alignLeft="@+id/casview2"
        android:layout_alignStart="@+id/casview2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/casview4"
        android:layout_below="@+id/casview3"
        android:layout_alignLeft="@+id/casview3"
        android:layout_alignStart="@+id/casview3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/casview5"
        android:layout_below="@+id/casview4"
        android:layout_alignLeft="@+id/casview4"
        android:layout_alignStart="@+id/casview4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Remove Casino: Input Casino Name Below "
        android:id="@+id/textView15"
        android:layout_below="@+id/editTextaddcasino"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/editTextremovecasino"
        android:layout_below="@+id/textView15"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editTextaddcasino"
        android:layout_alignEnd="@+id/editTextaddcasino" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Remove"
        android:id="@+id/removecasino"
        android:layout_alignBottom="@+id/editTextremovecasino"
        android:layout_alignRight="@+id/addcasino"
        android:layout_alignEnd="@+id/addcasino"
        android:layout_alignLeft="@+id/addcasino"
        android:layout_alignStart="@+id/addcasino" />

</RelativeLayout>
